<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="#131313"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/confirm_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center_horizontal"
        android:text="@string/delete_confirm"
        android:textColor="#05dae9"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_textview"
        android:layout_marginTop="55dp"
        android:background="@drawable/setting_dialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/confirm"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/setting_dialog_confirm" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/setting_dialog_cancel" />
    </LinearLayout>

</RelativeLayout>